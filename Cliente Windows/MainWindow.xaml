<Window x:Class="ClienteWindows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="iOS Activation Bypass" Height="700" Width="1200"
        Background="#1E1E1E" Foreground="#E0E0E0"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Info -->
        <StackPanel Grid.Column="0" Background="#252526" Margin="20">
            <TextBlock Text="Device Information" FontSize="14" FontWeight="Bold" Foreground="#4EC9B0" Margin="0,0,0,15"/>
            
            <!-- Grid 2 colunas para informações -->
            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Coluna 1 -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="Connection" FontSize="10" Foreground="#CCCCCC" Margin="0,0,0,2"/>
                        <TextBlock x:Name="ConnectionLabel" Text="N/A" FontSize="11" Foreground="#FFFFFF"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="Model" FontSize="10" Foreground="#CCCCCC" Margin="0,0,0,2"/>
                        <TextBlock x:Name="ModelLabel" Text="N/A" FontSize="11" Foreground="#FFFFFF"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="Serial" FontSize="10" Foreground="#CCCCCC" Margin="0,0,0,2"/>
                        <TextBlock x:Name="SerialLabel" Text="N/A" FontSize="11" Foreground="#FFFFFF"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="IMEI" FontSize="10" Foreground="#CCCCCC" Margin="0,0,0,2"/>
                        <TextBlock x:Name="IMEILabel" Text="N/A" FontSize="11" Foreground="#FFFFFF"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Status" FontSize="10" Foreground="#CCCCCC" Margin="0,0,0,2"/>
                        <TextBlock x:Name="StatusLabel" Text="Not Connected" FontSize="11" Foreground="#FF6B6B"/>
                    </StackPanel>
                </StackPanel>

                <!-- Coluna 2 -->
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="iOS" FontSize="10" Foreground="#CCCCCC" Margin="0,0,0,2"/>
                        <TextBlock x:Name="iOSLabel" Text="N/A" FontSize="11" Foreground="#FFFFFF"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="P/T Model" FontSize="10" Foreground="#CCCCCC" Margin="0,0,0,2"/>
                        <TextBlock x:Name="ProductTypeLabel" Text="N/A" FontSize="11" Foreground="#FFFFFF"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="ECID" FontSize="10" Foreground="#CCCCCC" Margin="0,0,0,2"/>
                        <TextBlock x:Name="ECIDLabel" Text="N/A" FontSize="11" Foreground="#FFFFFF"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="IMEI2" FontSize="10" Foreground="#CCCCCC" Margin="0,0,0,2"/>
                        <TextBlock x:Name="IMEI2Label" Text="N/A" FontSize="11" Foreground="#FFFFFF"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Activated" FontSize="10" Foreground="#CCCCCC" Margin="0,0,0,2"/>
                        <TextBlock x:Name="ActivatedLabel" Text="N/A" FontSize="11" Foreground="#FFFFFF"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <!-- Language Selection -->
            <TextBlock Text="Language" FontSize="12" Foreground="#CCCCCC" Margin="0,10,0,5"/>
            <ComboBox x:Name="LanguageCombo" Background="#FFFFFF" Foreground="#000000" Padding="10" SelectedIndex="1" SelectionChanged="LanguageCombo_SelectionChanged">
                <ComboBoxItem Foreground="#000000">English</ComboBoxItem>
                <ComboBoxItem Foreground="#000000">Português-BR</ComboBoxItem>
            </ComboBox>

            <!-- Server Selection -->
            <TextBlock Text="Server" FontSize="12" Foreground="#CCCCCC" Margin="0,10,0,5"/>
            <ComboBox x:Name="ServerCombo" Background="#FFFFFF" Foreground="#000000" Padding="10" SelectedIndex="0">
                <ComboBoxItem Foreground="#000000">Remote Server</ComboBoxItem>
                <ComboBoxItem Foreground="#000000">Localhost</ComboBoxItem>
                <ComboBoxItem Foreground="#000000">Custom URL</ComboBoxItem>
                <ComboBoxItem Foreground="#000000">R1nderpest (Russia)</ComboBoxItem>
            </ComboBox>

            <TextBlock x:Name="CustomUrlLabel" Text="Custom URL" FontSize="12" Foreground="#CCCCCC" Margin="0,10,0,5" Visibility="Collapsed"/>
            <TextBox x:Name="CustomUrlInput" Background="#FFFFFF" Foreground="#000000" Padding="10" Margin="0,0,0,15" Visibility="Collapsed" Text="http://localhost:8000"/>

            <!-- Localhost Info -->
            <TextBlock x:Name="LocalhostLabel" Text="Localhost Setup" FontSize="12" Foreground="#CCCCCC" Margin="0,10,0,5" Visibility="Collapsed"/>
            <TextBlock x:Name="LocalhostInfo" Text="Execute INICIAR_SERVIDOR.bat para rodar o servidor localmente após instalar PHP puro." 
                       FontSize="11" Foreground="#CCCCCC" TextWrapping="Wrap" Margin="0,0,0,10" Visibility="Collapsed"/>
            <Button x:Name="StartServerBtn" Content="Start Local Server" Click="StartServer_Click" 
                    Background="#17A2B8" Foreground="White" Padding="10" Margin="0,0,0,15" Cursor="Hand" Visibility="Collapsed"/>

            <!-- Buttons -->
            <Button x:Name="DetectButton" Content="Detect iPhone" Click="DetectButton_Click" 
                    Background="#0E639C" Foreground="White" Padding="10" Margin="0,20,0,10" Cursor="Hand"/>
            <Button x:Name="ExitButton" Content="Exit" Click="Exit_Click" 
                    Background="#D9534F" Foreground="White" Padding="10" Margin="0,0,0,20" Cursor="Hand"/>
        </StackPanel>

        <!-- Right Panel - Actions & Log -->
        <StackPanel Grid.Column="1" Margin="20">
            <TextBlock Text="Actions" FontSize="18" FontWeight="Bold" Foreground="#4EC9B0" Margin="0,0,0,15"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <Button x:Name="HelloActivationBtn" Content="Hello Activation" Click="HelloActivation_Click" 
                        Background="#FFFFFF" Foreground="#000000" Padding="15,10" Margin="0,0,10,0" Width="150" Cursor="Hand" IsEnabled="False" FontWeight="Bold"/>
                <Button x:Name="PasscodeActivationBtn" Content="Passcode Activation" Click="PasscodeActivation_Click"
                        Background="#FFFFFF" Foreground="#000000" Padding="15,10" Margin="0,0,10,0" Width="150" Cursor="Hand" IsEnabled="False" FontWeight="Bold"/>
                <Button x:Name="ManualBypassBtn" Content="Manual Bypass" Click="ManualBypass_Click" 
                        Background="#FF9800" Foreground="#000000" Padding="15,10" Margin="0,0,10,0" Width="150" Cursor="Hand" IsEnabled="False" FontWeight="Bold"/>
                <Button x:Name="ProcessOFFBtn" Content="Process OFF" Click="ProcessOFF_Click"
                        Background="#FFFFFF" Foreground="#000000" Padding="15,10" Margin="0,0,10,0" Width="100" Cursor="Hand" IsEnabled="False" FontWeight="Bold"/>
                <Button x:Name="ToolboxBtn" Content="Toolbox" Click="Toolbox_Click" Background="#3E3E42" Foreground="#E0E0E0" Padding="15,10" Cursor="Hand" FontWeight="Bold"/>
            </StackPanel>

            <!-- Log Output with Tabs -->
            <TextBlock Text="Console Output" FontSize="14" FontWeight="Bold" Foreground="#4EC9B0" Margin="0,0,0,10"/>
            <TabControl Background="#1E1E1E" Height="300" Margin="0,0,0,15">
                <!-- Normal Log Tab -->
                <TabItem Header="Normal" Background="#252526" Foreground="#E0E0E0">
                    <ScrollViewer Background="#1E1E1E" BorderBrush="#3E3E42" BorderThickness="1">
                        <TextBox x:Name="LogOutput" Background="#1E1E1E" Foreground="#00FF00" FontFamily="Courier New" 
                                 FontSize="11" Padding="10" IsReadOnly="True" TextWrapping="Wrap" 
                                 Text=""/>
                    </ScrollViewer>
                </TabItem>
                
                <!-- Debug Tab -->
                <TabItem Header="Debug" Background="#252526" Foreground="#E0E0E0">
                    <ScrollViewer Background="#1E1E1E" BorderBrush="#3E3E42" BorderThickness="1">
                        <TextBox x:Name="DebugOutput" Background="#1E1E1E" Foreground="#FF6B35" FontFamily="Courier New" 
                                 FontSize="10" Padding="10" IsReadOnly="True" TextWrapping="Wrap" 
                                 Text=""/>
                    </ScrollViewer>
                </TabItem>
            </TabControl>

            <!-- Footer Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="ExportLog" Content="Export Log" Click="ExportLog_Click" 
                        Background="#3E3E42" Foreground="#E0E0E0" Padding="10" Margin="0,0,10,0" Cursor="Hand"/>
                <Button x:Name="ClearLog" Content="Clear Log" Click="ClearLog_Click" 
                        Background="#3E3E42" Foreground="#E0E0E0" Padding="10" Cursor="Hand"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
